@model SuperMarketApp.Models.LoginViewModel

<h2>Login</h2>

<form asp-action="Login" method="post">
    <div>
        <label>Email:</label>
        <input asp-for="Email" />
    </div>
    <div>
        <label>Password:</label>
        <input asp-for="Password" type="password" />
    </div>
    <div>
        <input asp-for="RememberMe" /> Remember Me
    </div>
    <button type="submit">Login</button>
</form>
