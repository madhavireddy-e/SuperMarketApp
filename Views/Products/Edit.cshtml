@model SuperMarketApp.Models.Product

<h2>Edit Product</h2>

<form asp-action="Edit" method="post">
    <!-- Hidden field to preserve the Id -->
    <input type="hidden" asp-for="Id" />

    <div>
        <label for="Name">Name:</label>
        <input type="text" id="Name" name="Name" asp-for="Name" />
    </div>

    <div>
        <label for="Price">Price ($):</label>
        <input type="number" step="0.01" id="Price" name="Price" asp-for="Price" />
    </div>

    <div>
        <label for="Stock">Stock:</label>
        <input type="number" id="Stock" name="Stock" asp-for="Stock" />
    </div>

    <button type="submit">Save Changes</button>
</form>

<a href="/Products">Back to Product List</a>
